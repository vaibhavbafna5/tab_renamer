{
  "manifest_version": 2,

  "name": "Tab Masker",
  "description": "This extension allows you to rename your tabs",
  "version": "0.1",

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "taskManager.png",
    "default_title": "Test",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "css": ["style.css"],
    "matches": ["<all_urls>"]
  }]
}
